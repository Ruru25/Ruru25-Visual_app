<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calculatorText"
        android:layout_width="204dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="Calculator"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/viewTable"
        android:layout_width="355dp"
        android:layout_height="89dp"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="52dp"
        android:gravity="end"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:paddingRight="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculatorText" />

    <Button
        android:id="@+id/buttonSeven"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:text="7"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTable" />

    <Button
        android:id="@+id/buttonEight"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="8"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/buttonSeven"
        app:layout_constraintTop_toTopOf="@+id/buttonSeven" />

    <Button
        android:id="@+id/buttonNine"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="9"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/buttonEight"
        app:layout_constraintTop_toTopOf="@+id/buttonSeven" />

    <Button
        android:id="@+id/buttonFour"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:text="4"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/buttonSeven"
        app:layout_constraintTop_toBottomOf="@+id/buttonSeven" />

    <Button
        android:id="@+id/buttonFive"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="5"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/buttonFour"
        app:layout_constraintTop_toTopOf="@+id/buttonFour" />

    <Button
        android:id="@+id/buttonSix"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="6"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/buttonFive"
        app:layout_constraintTop_toTopOf="@+id/buttonFour" />

    <Button
        android:id="@+id/buttonOne"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:text="1"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/buttonFour"
        app:layout_constraintTop_toBottomOf="@+id/buttonFour" />

    <Button
        android:id="@+id/buttonTwo"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="2"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/buttonOne"
        app:layout_constraintTop_toTopOf="@+id/buttonOne" />

    <Button
        android:id="@+id/buttonThree"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="3"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/buttonTwo"
        app:layout_constraintTop_toTopOf="@+id/buttonOne" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:text="del"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9800"
        app:layout_constraintStart_toStartOf="@+id/buttonOne"
        app:layout_constraintTop_toBottomOf="@+id/buttonOne" />

    <Button
        android:id="@+id/buttonZero"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="0"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/buttonDelete"
        app:layout_constraintTop_toTopOf="@+id/buttonDelete" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="="
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9800"
        app:layout_constraintStart_toEndOf="@+id/buttonZero"
        app:layout_constraintTop_toTopOf="@+id/buttonZero" />

    <Button
        android:id="@+id/buttonDivision"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:text="/"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9800"
        app:layout_constraintStart_toEndOf="@+id/buttonNine"
        app:layout_constraintTop_toTopOf="@+id/buttonSeven" />

    <Button
        android:id="@+id/buttonMultiple"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="*"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9800"
        app:layout_constraintStart_toStartOf="@+id/buttonDivision"
        app:layout_constraintTop_toBottomOf="@+id/buttonDivision" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="-"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9800"
        app:layout_constraintStart_toStartOf="@+id/buttonDivision"
        app:layout_constraintTop_toBottomOf="@+id/buttonMultiple" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="+"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9800"
        app:layout_constraintStart_toStartOf="@+id/buttonDivision"
        app:layout_constraintTop_toBottomOf="@+id/buttonMinus" />

    <Button
        android:id="@+id/B_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9800"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/calculatorText" />

</androidx.constraintlayout.widget.ConstraintLayout>